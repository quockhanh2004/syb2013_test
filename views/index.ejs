<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bài tập khởi sự doanh nghiệp</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Bài tập khởi sự doanh nghiệp</h1>
    <form action="/submit" method="POST">
      <% for (let i = 0; i < questions.length; i += 3) { %>
        <div class="question-group">
          <% for (let j = i; j < i + 3 && j < questions.length; j++) { %>
            <div class="question mb-4">
              <p class="font-weight-bold"><%= questions[j].question %></p>
              <% if (questions[j].correctAnswer.length > 1) { %> 
                <% questions[j].answers.forEach((answer, k) => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="question<%= j + 1 %>[]" value="<%= String.fromCharCode(65 + k) %>" id="q<%= j + 1 %>a<%= k + 1 %>">
                    <label class="form-check-label" for="q<%= j + 1 %>a<%= k + 1 %>">
                      <%= answer %>
                    </label>
                  </div>
                <% }); %>
              <% } else { %>
                <% questions[j].answers.forEach((answer, k) => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="question<%= j + 1 %>" value="<%= String.fromCharCode(65 + k) %>" id="q<%= j + 1 %>a<%= k + 1 %>">
                    <label class="form-check-label" for="q<%= j + 1 %>a<%= k + 1 %>">
                      <%= answer %>
                    </label>
                  </div>
                <% }); %>
              <% } %> 
            </div>
          <% } %>
        </div>
      <% } %>
      <button type="submit" class="btn btn-primary">Nộp bài</button>
    </form>
  </div>
</body>
</html>